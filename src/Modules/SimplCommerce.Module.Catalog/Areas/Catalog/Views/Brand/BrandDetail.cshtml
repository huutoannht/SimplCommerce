@model SimplCommerce.Module.Catalog.Areas.Catalog.ViewModels.ProductsByBrand
@using System.Threading.Tasks
@addTagHelper *, SimplCommerce.Infrastructure
@{
    ViewBag.Title = Model.BrandMetaTitle ?? ViewBag.BrandMetaTitle;
}
@section additionalMeta {
    <meta name="title" content="@Model.BrandMetaTitle" />
    <meta name="keywords" content="@Model.BrandMetaKeywords" />
    <meta name="description" content="@Model.BrandMetaDescription" />

    <meta name="og:title" content="@Model.BrandMetaTitle" />
    <meta name="og:description" content="@Model.BrandMetaDescription" />
    <meta name="DC.title" content="@Model.BrandMetaTitle" />
    <meta name="DC.Subject" content="@Model.BrandMetaKeywords" />
    <meta name="DC.Description" content="@Model.BrandMetaDescription" />
}
<style>
