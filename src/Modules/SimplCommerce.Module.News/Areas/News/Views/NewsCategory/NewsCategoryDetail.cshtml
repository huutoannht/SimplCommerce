@model SimplCommerce.Module.News.Areas.News.ViewModels.NewsVm

@{
    ViewData["Title"] = "Tin tức";
}
<div class="blog-area full-blog blog-standard default-padding">
    <div class="container">
        <div class="row">
            <div class="blog-items">
                <div class="blog-content col-md-10 col-md-offset-1">
                    @foreach (var item in Model.NewsItem)
                        {
                    <div class="single-item item">
                        <div class="thumb">
                            <a href="blog-single-right-sidebar.html">
                                <img src="@item.ImageUrl" alt="@item.Name">
                                <div class="post-type">
                                    <i class="fas fa-images"></i>
                                </div>
                            </a>
                        </div>
                        <div class="info">
                            <div class="meta">
                                <ul>
                                    <li><a href="#">Admin</a></li>
                                    <li>@item.PublishedOn.ToString("dd/MM/yyyy")</li>
                                </ul>
                            </div>
                            <h3>
                                <a href="@item.Slug">@item.Name</a>
                            </h3>
                            @Html.Raw(item.ShortContent)
                            <a class="btn btn-theme circle border btn-sm" href="@item.Slug">Đọc tiếp <i class="fas fa-angle-right"></i></a>
                        </div>
                    </div>
                        }

                    <!-- Pagination -->
                    <div class="row">
                        <div class="col-md-12 text-right pagi-area">
                            <cs-pager cs-paging-pagesize="@Model.PageSize"
                                      cs-paging-pagenumber="@Model.Page"
                                      cs-paging-totalitems="@Model.TotalItem"
                                      asp-basehref="~/@Model.CurrentNewsCategory.Slug"
                                      cs-pagenumber-param="page"></cs-pager>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
