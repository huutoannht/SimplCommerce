@model SimplCommerce.Module.News.Areas.News.ViewModels.NewsVm

@{
    ViewData["Title"] = "Tin tức";
}


<!-- Start Breadcrumb
    ============================================= -->
<div class="breadcrumb-area shadow dark bg-fixed text-light" style="background-image: url(/themes/Beauty/img/banner/banner.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Tin tức</h1>
            </div>
            <div class="col-md-6 text-right">
                <ul class="breadcrumb">
                    <li><a href="/"><i class="fas fa-home"></i> Trang chủ</a></li>
                    <li class="active">Tin tức</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumb -->
<!-- Start Services
============================================= -->
<div class="departments-area bg-gray default-padding bottom-less">
    <div class="container">
        <div class="row">
            <div class="department-items text-center">
                @foreach (var item in Model.NewsItem)
                {
                    <div class="col-md-4 col-sm-6 equal-height">
                        <div class="item">
                            <div class="thumb">
                                <a href="#"><img src="@item.ImageUrl" alt="@item.Name"></a>
                            </div>
                            <div class="info">
                                <h4>
                                    <a href="@item.Slug">@item.Name</a>
                                </h4>
                                <ul>
                                    <li>
                                        <a href="@item.Slug" class="btn btn-primary">chi tiết</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- End Services -->
