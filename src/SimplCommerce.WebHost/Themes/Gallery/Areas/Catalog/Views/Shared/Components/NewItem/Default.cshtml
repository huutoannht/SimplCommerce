@model IEnumerable<SimplCommerce.Module.News.Areas.News.ViewModels.NewsItemVm>

<figure>
    <h2><a href="tin-tuc.html">Tin công nghệ</a></h2>
    <b></b>
</figure>
<ul>
    @foreach (var newItem in Model)
    {
        <li>
            <a href="@newItem.Slug">
                <img width="100" height="70" src='@newItem.ThumbnailImageUrl' alt="@newItem.Name">
                <h3>@newItem.Name</h3>
                <span>@newItem.CreatedOn.ToString("dd/MM/yyyy")</span>
            </a>
        </li>
    }
</ul>
