@model IEnumerable<SimplCommerce.Module.Catalog.Areas.Catalog.ViewModels.CategoryMenuItem>
@using SimplCommerce.Module.Core.Extensions
@using SimplCommerce.Module.Core.Models
@using System.Threading.Tasks
@using System.Globalization
@addTagHelper *, SimplCommerce.Infrastructure

@inject IViewLocalizer Localizer
@inject IWorkContext WorkContext
@inject SignInManager<User> SignInManager

    <div class="main-menu sticky" style="height: auto;">
        <!-- BEGIN .wrapper -->
        <div class="wrapper" style="left: auto; position: inherit; top: 0px;">
            <ul class="the-menu ">
                <li>
                    <a href="/">@Localizer["Trang chủ"]</a>
                </li>
                @foreach (var item in Model)
                {
                    <li>
                        @if (item.ChildItems.Count > 0)
                        {
                            <a href="~/@item.Slug"><span>@Localizer[item.Name]</span></a>
                            <ul>
                                @foreach (var childMenu in item.ChildItems)
                                {
                                    if (childMenu.ChildItems.Any())
                                    {
                                        <li>
                                            <a class="" href="~/@childMenu.Slug"> <span>@Localizer[childMenu.Name]</span></a>
                                            <ul >
                                                @foreach (var childChildItem in childMenu.ChildItems)
                                                {
                                                    <li><a class="dropdown-item" href="/@childChildItem.Slug">@childChildItem.Name</a></li>
                                                }
                                            </ul>
                                        </li>
                                    }
                                    else
                                    {
                                        <li><a href="/@childMenu.Slug">@childMenu.Name</a></li>
                                    }

                                }
                            </ul>
                        }
                        else
                        {
                            <a href="~/@item.Slug">@Localizer[item.Name]</a>
                        }
                    </li>
                }
                <li>
                    <a href="http://dulichcucphuong.com.vn/Checkout/shipping">@Localizer["Đặt tour"]</a>
                </li>
               
                <li>
                    <a href="http://dulichcucphuong.com.vn/lien-he-chung-toi">@Localizer["Liên hệ"]</a>
                </li>
            </ul>
            <!-- END .wrapper -->
        </div>
        <span class="language">
            <a href="/Localization/Localization/SetLanguage?culture=en-US"> <img src="~/themes/Tourims/images/icon-en.jpg" alt="" /></a>

        </span>
        <span class="language">
            <a href="/Localization/Localization/SetLanguage?culture=vi-VN"> <img src="~/themes/Tourims/images/icon-vn.jpg" alt="" /></a>
        </span>
    </div>
