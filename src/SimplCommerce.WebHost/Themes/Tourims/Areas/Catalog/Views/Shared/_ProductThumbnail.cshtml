@model SimplCommerce.Module.Catalog.Areas.Catalog.ViewModels.ProductThumbnail
<!--#region Ngành hàng chính -->

<style>
    .promo img {
        width: 35px;
        height: 35px;
        margin: 0;
    }

    .promo p {
        font-size: 12px;
        color: #333;
        line-height: 1.4;
        width: 165px;
        float: left;
        margin-left: 10px;
        white-space: normal;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
<a href="~/@Model.Slug">
    <img width="180" height="180" src='@Model.ThumbnailUrl' alt="@Model.Name" class="mx-auto d-block" />
    <h5>@Model.Name</h5>

    </a>
