@model IEnumerable<SimplCommerce.Module.Cms.Areas.Cms.ViewModels.ProductForm>
@using System.Globalization
@if (Model.Count() > 0)
{
    <div class="breaking-news">
        <span class="the-title">@Localizer["Tin chính"]</span>
        <ul>
            @foreach (var product in Model)
            {
                if (CultureInfo.CurrentCulture.Name != "vi-VN")
                {
                    product.Name = product.NameEN;
                }
                <li><a href="~/@product.Slug">@product.Name</a></li>
            }
        </ul>
    </div>
}
