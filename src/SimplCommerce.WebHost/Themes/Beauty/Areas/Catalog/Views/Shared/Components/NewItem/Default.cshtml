@model IEnumerable<SimplCommerce.Module.News.Areas.News.ViewModels.NewsItemVm>

<div class="sidebar-item recent-post">
    <div class="title">
        <h4>Bài viết gần đây</h4>
    </div>
    <ul>
        @foreach (var newItem in Model)
        {
            <li>
                <div class="thumb">
                    <a href="@newItem.Slug">
                        <img  width="100" height="70" src='@newItem.ThumbnailImageUrl' alt="@newItem.Name">
                    </a>
                </div>
                <div class="info">
                    <a href="@newItem.Slug">@newItem.Name</a>
                    <div class="meta-title">
                        <span class="post-date">@newItem.CreatedOn.ToString("dd/MM/yyyy")</span> - By <a href="#">Admin</a>
                    </div>
                </div>
            </li>
        }

    </ul>
</div>
