@model SimplCommerce.Module.Cms.Areas.Cms.ViewModels.CarouselWidgetViewComponentVm
<aside class="homebanner">
    <div id="sync1">
        @foreach (var item in Model.Items)
        {
            <div class="item">
                <a aria-label='slide' href='@item.TargetUrl'><img src='@item.Image' alt='@item.SubCaption' /></a>
            </div>
        }
    </div>
    <div id="sync2">
        @foreach (var item in Model.Items)
        {
            <div class="item">
                <h3>@item.SubCaption<br /></h3>
                <i class="arrowbar"></i>
            </div>
        }
    </div>
</aside>
